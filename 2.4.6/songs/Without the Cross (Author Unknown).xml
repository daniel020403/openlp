  <lyrics>
    <verse name="v1a">
      <lines>Made of wood, built by man</lines>
    </verse>
    <verse name="v1b">
      <lines>There it stood, Salvation's plan</lines>
    </verse>
    <verse name="v1c">
      <lines>Adam's fall and my own sin</lines>
    </verse>
    <verse name="v1d">
      <lines>It was all placed on Him</lines>
    </verse>
    <verse name="c1a">
      <lines>Without the cross</lines>
    </verse>
    <verse name="c1b">
      <lines>I would not know</lines>
    </verse>
    <verse name="c1c">
      <lines>Redeeming love</lines>
    </verse>
    <verse name="c1d">
      <lines>That sought my soul</lines>
    </verse>
    <verse name="c1e">
      <lines>Without the blood</lines>
    </verse>
    <verse name="c1f">
      <lines>Where would I be</lines>
    </verse>
    <verse name="c1g">
      <lines>I would be lost</lines>
    </verse>
    <verse name="c1h">
      <lines>Without the cross<br/>verse 2</lines>
    </verse>
    <verse name="c1i">
      <lines>Mercy spilled blood divine</lines>
    </verse>
    <verse name="c1j">
      <lines>On Calvary's hill for all mankind</lines>
    </verse>
    <verse name="c1k">
      <lines>Flowing through the ages past</lines>
    </verse>
    <verse name="c1l">
      <lines>Destined to reach me at last</lines>
    </verse>
    <verse name="v3a">
      <lines/>
    </verse>
    <verse name="v3b">
      <lines>I can't repay Him for the grace</lines>
    </verse>
    <verse name="v3c">
      <lines>He poured out on that tree</lines>
    </verse>
    <verse name="v3d">
      <lines>But I'll live my life for Jesus Christ</lines>
    </verse>
    <verse name="v3e">
      <lines>For all He's done for me</lines>
    </verse>
    <verse name="c1m">
      <lines>Redeeming love that  sought my soul</lines>
    </verse>
    <verse name="c1n">
      <lines>Without the blood,</lines>
    </verse>
    <verse name="c1o">
      <lines>I would be lost,</lines>
    </verse>
    <verse name="c1p">
      <lines>Without the cross,</lines>
