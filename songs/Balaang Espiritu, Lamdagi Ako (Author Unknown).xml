<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 3.0.2" modifiedIn="OpenLP 3.0.2" modifiedDate="2023-10-29T06:45:27">
  <properties>
    <titles>
      <title>Balaang Espiritu, Lamdagi Ako</title>
    </titles>
    <authors>
      <author>Author Unknown</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1a">
      <lines>Balaang Espiritu,<br/>Lamdagi ako karon;</lines>
    </verse>
    <verse name="v1b">
      <lines>Pala-a ang kangitngit,<br/>UG hayagan Mo ako.</lines>
    </verse>
    <verse name="v2a">
      <lines>Gamhanang Espiritu,<br/>Hinloi ako karon;</lines>
    </verse>
    <verse name="v2b">
      <lines>Isalikway king sala,<br/>Nga naghari kanako.</lines>
    </verse>
    <verse name="v3a">
      <lines>Balaang Maglilipay,<br/>dasigang masulob-on;</lines>
    </verse>
    <verse name="v3b">
      <lines>Kaguol ipalayo,<br/>Kasingkasing ayohon.</lines>
    </verse>
    <verse name="v4a">
      <lines>Langitnong Espiritu,<br/>Puy-an Mo king dughan ko;</lines>
    </verse>
    <verse name="v4b">
      <lines>Akong himoon Ikaw,<br/>Nga bugtong nga Hari ko.AMEN.</lines>
    </verse>
  </lyrics>
</song>
