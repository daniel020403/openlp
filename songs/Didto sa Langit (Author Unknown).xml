<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 3.0.2" modifiedIn="OpenLP 3.0.2" modifiedDate="2023-11-19T05:18:15">
  <properties>
    <titles>
      <title>Didto sa Langit</title>
    </titles>
    <authors>
      <author>Author Unknown</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="c1a">
      <lines break="optional">Didto sa langit,<br/></lines>
      <lines>kalipay lang<br/>ang atong matagamtaman</lines>
    </verse>
    <verse name="c1b">
      <lines break="optional">Wa nay kasakit<br/>ug wa’y kagul-anan,<br/></lines>
      <lines>ang tanan lunlon<br/>kalipay lang</lines>
    </verse>
    <verse name="c1c">
      <lines break="optional">Didto sa langit<br/></lines>
      <lines> kalipay lang<br/>ang atong matagamtaman</lines>
    </verse>
    <verse name="c1d">
      <lines>Kalipay’ng wa’y katapusan<br/>hangtud sa kahangturan</lines>
    </verse>
    <verse name="v1a">
      <lines break="optional">Unsa pa may tinguhaon ta ning kalibutan?<br/></lines>
      <lines>Ang kalipay ba nga lumalabay lamang?</lines>
    </verse>
    <verse name="v1b">
      <lines break="optional">Tinguhaon ta ang kalipay nga wa’y katapusan<br/></lines>
      <lines break="optional">Didto sa langitnong<br/>puloy-anan,<br/></lines>
      <lines>sa Amahan.</lines>
    </verse>
    <verse name="v2a">
      <lines break="optional">Ni’ng kalibutan<br/>ato karong gipuy-an<br/></lines>
      <lines>Puno sa kasakit<br/>ug mga kapaitan</lines>
    </verse>
    <verse name="v2b">
      <lines break="optional">Kalisdanan kanunay natong matagamtaman<br/></lines>
      <lines>Dunay kalipay<br/>apan lumalabay lamang,<br/>ang tanan.</lines>
    </verse>
    <verse name="v3a">
      <lines break="optional">Didto sa langit kauban ta si Jesus Cristo<br/></lines>
      <lines>Diha sa mahimayaon<br/>Niyang trono</lines>
    </verse>
    <verse name="v3b">
      <lines break="optional">Kauban ta<br/>ang mga manulunda Niya<br/></lines>
      <lines break="optional">Ug magaawit ta<br/>sa pagdayeg Kaniya<br/></lines>
      <lines>Aleluya.</lines>
    </verse>
    <verse name="e1">
      <lines>Didto sa langit.</lines>
    </verse>
  </lyrics>
</song>
