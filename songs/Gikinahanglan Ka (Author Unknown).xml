<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 3.0.2" modifiedIn="OpenLP 3.0.2" modifiedDate="2023-10-29T06:45:28">
  <properties>
    <titles>
      <title>Gikinahanglan Ka</title>
    </titles>
    <authors>
      <author>Author Unknown</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="c1a">
      <lines>Ikaw gikinahanglan,<br/>Sa tanan nga takna,</lines>
    </verse>
    <verse name="c1b">
      <lines>Ako panalangini,<br/>Moduol ako.</lines>
    </verse>
    <verse name="v1a">
      <lines>Gikinahanglan Ka,<br/>Matam-is kong Jesus;</lines>
    </verse>
    <verse name="v1b">
      <lines>Ang tingog Mong lumo,<br/>Maoy kalinaw ko.</lines>
    </verse>
    <verse name="v2a">
      <lines>Bilihon kong Jesus,<br/>Padul-an Mo ako;</lines>
    </verse>
    <verse name="v2b">
      <lines>Pagtintal way gahum,<br/>Kong haduol Ikaw.</lines>
    </verse>
    <verse name="v3a">
      <lines>Gikinahanglan Ka,<br/>Kuyogan Mo ako;</lines>
    </verse>
    <verse name="v3b">
      <lines>Makawang ang tanan,<br/>Kon di Ka mouban.</lines>
    </verse>
    <verse name="v4a">
      <lines>Gikinahanglan Ka,<br/>Balaan nga Jesus;</lines>
    </verse>
    <verse name="v4b">
      <lines>Imoha na ako,<br/>Bugtong Anak sa Dios.</lines>
    </verse>
  </lyrics>
</song>
